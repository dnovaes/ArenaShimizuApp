<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sb_border" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/sb_background</item>
        <item name="android:color">#FFF</item>
    </style>
    <style name="sb_editText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/sb_editNumber_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sb_editNumber_text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <!--<item name="android:paddingTop">15dp</item>-->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="sb_inning_number" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/sb_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


</resources>
